# Core URLs
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:4000
WORKER_URL=http://localhost:4001
QUEUE_PREFIX=ai
DEFAULT_LOCALE=ko

# Database (choose one)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_orchestrator
# SQLITE_URL=file:./dev.db

# Redis
REDIS_URL=redis://localhost:6379

# Auth / NextAuth
NEXTAUTH_SECRET=change-me-nextauth-secret
EMAIL_SERVER=smtp://user:pass@smtp.example.com:587
EMAIL_FROM=hello@example.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_ID=
GITHUB_SECRET=
AUTH_DISABLED=false
TEST_BYPASS_AUTH=false

# Provider credentials
OPENAI_API_KEY=sk-openai
SUNO_API_KEY=suno-key
SUNO_BASE_URL=https://api.suno.ai
SUNO_USE_MOCK=false

# Storage (S3 or Cloudflare R2)
S3_ENDPOINT=https://s3.example.com
S3_ACCESS_KEY_ID=access-key
S3_SECRET_ACCESS_KEY=secret
S3_BUCKET=ai-orchestrator

# Payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
TOSS_SECRET_KEY=
TOSS_CLIENT_KEY=
TOSS_WEBHOOK_SECRET=

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=
SENTRY_DSN=

# Security keys (32 bytes)
ENCRYPTION_KEY=00000000000000000000000000000000
JWT_SIGNING_KEY=11111111111111111111111111111111

# Misc
NODE_OPTIONS=--enable-source-maps
